{
  "name": "SpringQuill",
  "version": "3.0.0",
  "description": "Smart Writing and Reading Assistant: Your AI-Powered Browser Companion",
  "manifest_version": 3,
  "author": "cc6776",
  "action": {
    "default_title": "SpringQuill",
    "default_popup": "dist/popup/index.html",
    "defult_icon": "dist/assets/icon.png"
  },
  "options_ui": {
    "page": "dist/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "dist/assets/icon16.png",
    "32": "dist/assets/icon32.png",
    "48": "dist/assets/icon48.png",
    "128": "dist/assets/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "dist/content/index.js"
      ],
      "css": [
        "dist/content/animate.css"
      ],
      "matches": [
        "*://*/*"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "dist/background/index.js"
  },
  "host_permissions": [
    "https://hello.xcaoliu.com/"
  ],
  "permissions": [
    "storage",
    "clipboardRead",
    "contextMenus",
    "cookies"
  ]
}